<!DOCTYPE html>
<html>
  <head>
    <title>Performap</title>
    <%= include_gon %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:400,700" %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container">
      <div id="performap-logo-link">
        <h1><%= link_to "Performap", root_path %></h1>
      </div>
      <%= yield %>
    </div>
  </body>
</html>